{
  "name": "vscode-mmbasic",
  "displayName": "MMBasic",
  "description": "MMBasic language support with serial port communication",
  "repository": {
    "type": "git",
    "url": "https://github.com/DNSGeek/vscode-mmbasic"
  },
  "version": "1.2.0",
  "publisher": "DNSGeek",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mmbasic-explorer",
          "title": "MMBasic",
          "icon": "$(circuit-board)"
        }
      ]
    },
    "views": {
      "mmbasic-explorer": [
        {
          "id": "mmbasic.fileBrowser",
          "name": "Remote Files"
        },
        {
          "id": "mmbasic.debugVariables",
          "name": "Debug Variables"
        }
      ]
    },
    "languages": [
      {
        "id": "mmbasic",
        "aliases": [
          "MMBasic",
          "mmbasic"
        ],
        "extensions": [
          ".bas",
          ".mmb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mmbasic",
        "scopeName": "source.mmbasic",
        "path": "./syntaxes/mmbasic.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "mmbasic.connectSerial",
        "title": "MMBasic: Connect to Device"
      },
      {
        "command": "mmbasic.disconnectSerial",
        "title": "MMBasic: Disconnect from Device"
      },
      {
        "command": "mmbasic.sendFile",
        "title": "MMBasic: Send Current File to Device"
      },
      {
        "command": "mmbasic.sendSelection",
        "title": "MMBasic: Send Selection to Device"
      },
      {
        "command": "mmbasic.runProgram",
        "title": "MMBasic: Run Program on Device"
      },
      {
        "command": "mmbasic.stopProgram",
        "title": "MMBasic: Stop Program"
      },
      {
        "command": "mmbasic.listFiles",
        "title": "MMBasic: List Files on Device"
      },
      {
        "command": "mmbasic.clearTerminal",
        "title": "MMBasic: Clear Terminal"
      },
      {
        "command": "mmbasic.refreshFiles",
        "title": "MMBasic: Refresh Files",
        "icon": "$(refresh)"
      },
      {
        "command": "mmbasic.uploadFile",
        "title": "MMBasic: Upload File to Device",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "mmbasic.downloadFile",
        "title": "MMBasic: Download File",
        "icon": "$(cloud-download)"
      },
      {
        "command": "mmbasic.deleteFile",
        "title": "MMBasic: Delete File",
        "icon": "$(trash)"
      },
      {
        "command": "mmbasic.startDebugging",
        "title": "MMBasic: Start Debugging",
        "icon": "$(debug-start)"
      },
      {
        "command": "mmbasic.stopDebugging",
        "title": "MMBasic: Stop Debugging",
        "icon": "$(debug-stop)"
      },
      {
        "command": "mmbasic.debugStepOver",
        "title": "MMBasic: Step Over",
        "icon": "$(debug-step-over)"
      },
      {
        "command": "mmbasic.debugContinue",
        "title": "MMBasic: Continue",
        "icon": "$(debug-continue)"
      },
      {
        "command": "mmbasic.inspectVariable",
        "title": "MMBasic: Inspect Variable"
      },
      {
        "command": "mmbasic.evaluateExpression",
        "title": "MMBasic: Evaluate Expression"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mmbasic.refreshFiles",
          "when": "view == mmbasic.fileBrowser",
          "group": "navigation"
        },
        {
          "command": "mmbasic.uploadFile",
          "when": "view == mmbasic.fileBrowser",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mmbasic.downloadFile",
          "when": "view == mmbasic.fileBrowser && viewItem == file",
          "group": "inline"
        },
        {
          "command": "mmbasic.deleteFile",
          "when": "view == mmbasic.fileBrowser && viewItem == file",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mmbasic.sendFile",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorLangId == mmbasic"
      },
      {
        "command": "mmbasic.runProgram",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == mmbasic"
      },
      {
        "command": "mmbasic.sendSelection",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == mmbasic"
      },
      {
        "command": "mmbasic.startDebugging",
        "key": "f5",
        "when": "editorLangId == mmbasic"
      },
      {
        "command": "mmbasic.stopDebugging",
        "key": "shift+f5",
        "when": "editorLangId == mmbasic"
      },
      {
        "command": "mmbasic.debugStepOver",
        "key": "f10",
        "when": "editorLangId == mmbasic"
      },
      {
        "command": "mmbasic.debugContinue",
        "key": "f5",
        "when": "inDebugMode && editorLangId == mmbasic"
      }
    ],
    "configuration": {
      "title": "MMBasic",
      "properties": {
        "mmbasic.serialPort": {
          "type": "string",
          "default": "",
          "description": "Default serial port (e.g., COM3, /dev/ttyUSB0)"
        },
        "mmbasic.baudRate": {
          "type": "number",
          "default": 38400,
          "enum": [
            9600,
            19200,
            38400,
            57600,
            115200
          ],
          "description": "Serial baud rate"
        },
        "mmbasic.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect on startup"
        },
        "mmbasic.lineEnding": {
          "type": "string",
          "default": "\\r\\n",
          "enum": [
            "\\n",
            "\\r",
            "\\r\\n"
          ],
          "description": "Line ending for serial communication"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "serialport": "^12.0.0"
  }
}
